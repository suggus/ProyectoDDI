<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizTest.EditFragment4">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="id"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp"
    android:id="@+id/tv_Id4"/>

<EditText
    android:id="@+id/et_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="question"
    android:inputType="textAutoComplete"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<EditText
    android:id="@+id/et_option1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="option 1"
    android:inputType="textAutoComplete"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<EditText
    android:id="@+id/et_option2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="option 2"
    android:inputType="textAutoComplete"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<EditText
    android:id="@+id/et_option3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="option 3"
    android:inputType="textAutoComplete"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<EditText
    android:id="@+id/et_option4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="option 4"
    android:inputType="textAutoComplete"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<EditText
    android:id="@+id/et_correctAnswer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_height"
    android:fontFamily="sans-serif-light"
    android:hint="Correct answer"
    android:inputType="number"
    android:layout_margin="@dimen/big_padding"
    android:textSize="18sp" />

<Button
    android:id="@+id/btt_insertar4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:text="@string/button_save"
    android:layout_margin="@dimen/big_padding"
    android:textColor="@color/white" />

<Button
    android:id="@+id/btt_modificar4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:text="@string/modificar"
    android:layout_margin="@dimen/big_padding"
    android:textColor="@color/white" />

<Button
    android:id="@+id/btt_borrar4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_500"
    android:text="Borrar"
    android:layout_margin="@dimen/big_padding"
    android:textColor="@color/white" />

</LinearLayout>